<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tagglabs.rs_reg.login"
    android:background="@mipmap/nbg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/nlogo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20sp"
    android:id="@+id/image"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login"
        android:layout_below="@+id/image"
        android:layout_marginTop="20sp"
        android:paddingTop="50sp"
        android:id="@+id/first">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="PLAY WIN CRICKET WORLD CUP 2019"
            android:textColor="#520600"
            android:textStyle="bold"
            android:id="@+id/play"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="17sp"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="5sp"
            android:text="TRIP TO ENGLAND"
            android:layout_below="@+id/play"
            android:textColor="#520600"
            android:textStyle="bold"
            android:id="@+id/england"
            android:layout_centerHorizontal="true"
            />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerHorizontal="true"/>

        <AutoCompleteTextView
            android:id="@+id/Mobile"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_below="@+id/england"
            android:layout_marginLeft="90sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="90sp"
            android:background="@drawable/phonetext"
            android:hint="MOBILE"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="45sp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:layout_below="@+id/Mobile"
    android:layout_marginLeft="80sp"
    android:layout_marginRight="60sp">
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:id="@+id/next"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/button"  />
</RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>