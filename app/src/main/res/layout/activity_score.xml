<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.tagglabs.rs_reg.score"
    android:background="@mipmap/nbg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/nback"
        android:background="#00ffffff"
        android:paddingTop="25sp"
        android:paddingBottom="10sp"
        android:paddingLeft="20sp"
        android:paddingRight="15sp"
        android:id="@+id/backbtn"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#630302"
        android:paddingTop="10sp"
        android:paddingLeft="20sp"
        android:id="@+id/sync"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/nlogo"
        android:layout_marginTop="20sp"
        android:id="@+id/logo"/>

    <LinearLayout
        android:layout_below="@+id/logo"
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="33sp"
        android:background="@drawable/loginborder"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30sp"
        android:paddingBottom="33sp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOHN APPLEASED"
            android:textColor="#dfc26c"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/voucher_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text=""
            android:textColor="#dfc26c"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="ta@tagglabs.com "
            android:textColor="#dfc26c"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text=" 7015630355"
            android:textColor="#dfc26c"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Gurugram, Haryana"
            android:textColor="#dfc26c"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="@mipmap/totalscore"
        android:layout_marginTop="20sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:paddingLeft="30sp"
            android:paddingRight="10sp"
            >

            <TextView
                android:id="@+id/totalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Score"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:paddingTop="8sp"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="30sp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:background="@mipmap/level"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/third"
        android:layout_marginTop="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp">
            <TextView
                android:text="Level"
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:paddingTop="8sp"/>
            <TextView
                android:id="@+id/level_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="30sp"
                android:layout_alignParentRight="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/third"
        android:background="@drawable/parts"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:id="@+id/fourth"
        android:layout_marginTop="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingRight="10sp"
            android:layout_marginBottom="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parts Collected"
                android:id="@+id/partText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_alignParentLeft="true"
                android:textAlignment="center"
                android:paddingTop="8sp"/>
            <TextView
                android:id="@+id/parts_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="20sp"
                android:layout_alignParentRight="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth"
        android:text="Time for Large Run to go World Cup 2019"
        android:layout_marginLeft="70sp"
        android:layout_marginRight="70sp"
        android:id="@+id/logout"
        android:textColor="#FFFFFF"
        android:gravity="bottom"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:paddingLeft="10sp"
        android:textSize="16sp"
        android:textStyle="normal"/>
    </RelativeLayout>
</ScrollView>