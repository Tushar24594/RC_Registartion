<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".score"
    android:background="@mipmap/profilebg">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"
        android:background="#f0f4e3"
        android:paddingTop="25sp"
        android:paddingBottom="10sp"
        android:paddingLeft="20sp"
        android:paddingRight="15sp"
        android:id="@+id/backbtn"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sync"
        android:layout_alignParentRight="true"
        android:background="#f0f4e3"
        android:paddingTop="10sp"
        android:paddingLeft="20sp"
        android:id="@+id/sync"/>
    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33sp"
        android:layout_marginTop="80sp"
        android:layout_marginRight="33sp"
        android:background="#540000"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30sp"
        android:paddingBottom="33sp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOHN APPLEASED"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/voucher_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="ta@tagglabs.com | 7015630355"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Gurugram, Haryana"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:background="@mipmap/scorebg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:paddingLeft="30sp"
            android:paddingRight="10sp">

            <TextView
                android:id="@+id/totalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="TOTAL SCORE"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="30sp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:background="#ffffff"
        android:layout_marginRight="33sp"
        android:layout_marginLeft="33sp"
        android:id="@+id/third"
        android:layout_marginTop="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingRight="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEVEL COMPLETED"
                android:id="@+id/levelText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/level_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="30sp"
                android:layout_alignParentRight="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/third"
        android:background="#ffffff"
        android:layout_marginRight="33sp"
        android:layout_marginLeft="33sp"
        android:id="@+id/fourth"
        android:layout_marginTop="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingRight="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARTS COLLECTED"
                android:id="@+id/partText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/parts_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingRight="30sp"
                android:layout_alignParentRight="true"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sample"
        android:layout_below="@id/fourth"
        android:layout_alignParentBottom="false"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sample1"
        android:layout_below="@id/sample"
        android:layout_alignParentBottom="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sample1"
        android:text="LOGOUT"
        android:id="@+id/logout"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:paddingBottom="0sp"
        android:textSize="20sp"
        android:textStyle="normal"/>
</RelativeLayout>