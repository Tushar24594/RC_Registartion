<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@mipmap/nbg"
    tools:context="in.tagglabs.rs_reg.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/Registartion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-black"
        android:src="@mipmap/nlogo" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/Registartion"
    android:layout_marginLeft="30sp"
    android:layout_marginRight="30sp"
    android:paddingBottom="25sp"
    android:paddingTop="20sp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:layout_marginTop="10sp"
    android:background="@drawable/loginborder"
    android:id="@+id/first">
    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register and win a "
        android:textStyle="bold"
        android:textSize="21sp"
        android:textColor="#520600"
        android:id="@+id/gift"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital Wallet Cashback"
        android:textStyle="bold"
        android:paddingTop="5sp"
        android:textColor="#520600"
        android:textSize="19sp"
        android:layout_below="@+id/gift"
        android:id="@+id/card"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="of Rs.50"
        android:textStyle="bold"
        android:paddingTop="5sp"
        android:textColor="#520600"
        android:textSize="19sp"
        android:layout_below="@+id/card"
        android:id="@+id/rs"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_below="@+id/rs"
        android:id="@+id/NameLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

            <AutoCompleteTextView

                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/phonetext"
                android:textStyle="bold"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="textCapWords"
                android:hint="Name"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:singleLine="true"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/MobileLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameLinear"
        android:layout_marginTop="10dp"
        android:background="#ffffff">


            <AutoCompleteTextView
                android:id="@+id/Mobile"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/phonetext"
                android:textStyle="bold"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFF"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="Mobile"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:singleLine="true"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/MobileLinear"
    android:layout_marginTop="10sp"
    android:orientation="horizontal"
   android:background="#ffffff"
    android:id="@+id/EmailLinear">


    <AutoCompleteTextView
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:background="@drawable/phonetext"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:textColorHint="#FFFFFF"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:hint="Email"
        android:maxLines="1"
        android:singleLine="true"/>

</LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EmailLinear"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:id="@+id/radiogroup"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#dfc26c"
            android:id="@+id/male"
            android:checked="false"
            android:text=" Male"
            android:textStyle="bold"
            android:textColor="#dfc26c"
            android:textSize="18sp"/>

        <RadioButton
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#dfc26c"
            android:id="@+id/female"
            android:checked="false"
            android:text="Female"
            android:textStyle="bold"
            android:textColor="#dfc26c"
            android:textSize="18sp"/>
    </RadioGroup>
    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCATION"
        android:textSize="17sp"
        android:textColor="#dfc26c"
        android:paddingLeft="5sp"
        android:id="@+id/location"
        android:layout_below="@+id/radiogroup"
        android:fontFamily="@string/bottom_sheet_behavior"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="10sp"
       >
    <ImageButton
        android:id="@+id/getLocation"
        android:layout_width="35dp"
        android:layout_height="26dp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_gravity="left"
        android:src="@mipmap/gp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useLoc"
        android:textColor="#dfc26c"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="35sp"
        android:textStyle="bold"
        android:text="USE YOUR CURRENT LOCATION"
        android:textSize="12sp"/>
        <LinearLayout
            android:id="@+id/locate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/useLoc"
            android:layout_marginTop="10sp">
        <EditText
            android:id="@+id/city"
            android:layout_below="@+id/useLoc"
            android:layout_width="148dp"
            android:layout_height="35sp"
            android:background="@drawable/phonetext"
            android:textStyle="bold"
            android:paddingLeft="10sp"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="City" />
        <EditText
            android:id="@+id/state"
            android:layout_below="@+id/useLoc"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10sp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/phonetext"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="State" />
        </LinearLayout>

        <TextView
            android:id="@+id/terms"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:layout_below="@id/locate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="9sp"
            android:drawableStart="@mipmap/terms"
            android:text="Terms and Conditions"
            android:textColor="#dfc26c" />
    </RelativeLayout>

</RelativeLayout>
    <LinearLayout
        android:id="@+id/submitLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:paddingLeft="70sp"
        android:paddingRight="70sp">
        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MobileLinear"
            android:background="@drawable/button"
            android:text="REGISTER"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/submitLinear"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center|bottom">
    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Already have an account? LOG IN"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
    <ProgressBar
        android:layout_below="@id/first"
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:visibility="gone"
        android:layout_centerHorizontal="true"></ProgressBar>
    </RelativeLayout>
</ScrollView>



