<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@mipmap/mainbg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Registartion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-black"
        android:src="@mipmap/gcard" />
    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER AND WIN A GIFT"
        android:textStyle="bold"
        android:textSize="21sp"
        android:textColor="#000000"
        android:layout_below="@+id/Registartion"
        android:id="@+id/gift"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARD OF â‚¹100"
        android:textStyle="bold"
        android:paddingTop="5sp"
        android:textColor="#000000"
        android:textSize="19sp"
        android:layout_below="@+id/gift"
        android:id="@+id/card"
        android:layout_centerHorizontal="true"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/card"
    android:orientation="horizontal"
    android:layout_marginLeft="30sp"
    android:layout_marginRight="30sp"
    android:paddingBottom="15sp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:layout_marginTop="10sp"
    android:background="@drawable/rounded_edge"
    android:id="@+id/first">
    <LinearLayout
        android:id="@+id/NameLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="FULL NAME"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MobileLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameLinear"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/Mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="10"
                android:hint="PHONE NUMBER"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/MobileLinear"
    android:layout_marginTop="10sp"
    android:orientation="horizontal"
   android:background="#ffffff"
    android:id="@+id/EmailLinear">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <AutoCompleteTextView
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:hint="Email"
        android:maxLines="1"
        android:singleLine="true"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:id="@+id/second"
        android:background="@drawable/rounded_edge"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
       android:paddingBottom="10sp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/Linear"
    android:layout_marginTop="5sp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOCATION"
        android:textColor="#000000"
        android:textSize="17sp"
        android:paddingLeft="5sp"
        android:id="@+id/Loc_text"
        android:fontFamily="@string/bottom_sheet_behavior"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Loc_text">

        <ImageButton
            android:id="@+id/getLocation"
            android:layout_width="39dp"
            android:layout_height="26dp"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_gravity="left"
            android:src="@mipmap/gp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Loc_text"
        android:id="@+id/useLoc"
        android:layout_marginTop="7dp"
        android:accessibilityTraversalAfter="@id/getLocation"
        android:text="USE YOUR CURRENT LOCATION"
        android:textSize="13sp"/>
    </LinearLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linear"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:id="@+id/LocLinear">

        <EditText
            android:id="@+id/city"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:hint="City" />
        <EditText
            android:id="@+id/state"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State" />


    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/submitLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp">

        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MobileLinear"
            android:background="@drawable/button"
            android:text="REGISTER"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/submitLinear"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center|bottom">
    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Already have an account?"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:id="@+id/login"
        android:layout_alignBottom="@id/already"
        android:layout_marginTop="5sp"
        android:textColor="#540000"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp" />
</LinearLayout>
    <ProgressBar
        android:layout_below="@id/first"
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:visibility="gone"
        android:layout_centerHorizontal="true"></ProgressBar>
</RelativeLayout>



