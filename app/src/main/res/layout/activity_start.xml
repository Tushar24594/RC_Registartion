<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start"
    android:background="@mipmap/bgamazon">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/per"
        android:layout_alignParentRight="true"
        android:paddingRight="5sp"
        android:paddingTop="3sp"
        android:background="#f0f4e3"
        android:id="@+id/profile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONGRATULATIONS"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="26sp"
        android:layout_marginTop="40sp"
        android:id="@+id/congrats"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectur"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:paddingTop="3sp"
        android:textColor="#000000"
        android:id="@+id/text2"
        android:layout_below="@id/congrats"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        android:paddingTop="3sp"
        android:textColor="#000000"
        android:id="@+id/text3"
        android:text="adipsiscing elit, sed do"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/paytm"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:paddingTop="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edge"
        android:layout_marginTop="440sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:paddingTop="30sp"
        android:paddingBottom="15sp"
        android:id="@+id/first"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:paddingRight="20sp">
            <TextView
                android:id="@+id/coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:text="123456"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:id="@+id/redeem"
        android:text="How to Redeem"
        android:textAlignment="center"
        android:paddingTop="10sp"
        android:textSize="20sp"
        android:textColor="#540000"
        android:paddingBottom="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/redeem"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE TO GAME"
            android:id="@+id/startGame"
            android:textColor="#ffffff"
            android:background="@drawable/button"  />
    </RelativeLayout>

</RelativeLayout>